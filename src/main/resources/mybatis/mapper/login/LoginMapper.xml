<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nextinno.doshare.login.mapper.LoginMapper">
    <select id="certificationUser" parameterType="com.nextinno.doshare.domain.users.User"
        resultType="com.nextinno.doshare.domain.users.User">
        SELECT *
        FROM
            user
        WHERE
        email = #{email} 
        AND password = #{password}
    </select>
    <select id="findByUser" parameterType="com.nextinno.doshare.domain.users.User"
        resultType="com.nextinno.doshare.domain.users.User">
        SELECT *
        FROM
            user
        WHERE
        email = #{email}
    </select>
    <insert id="addUser" parameterType="com.nextinno.doshare.domain.users.User">
        INSERT INTO user (email, name, password, role)
        VALUES
        (#{email}, #{name}, #{password}, #{role})
    </insert>
</mapper>